@model IEnumerable<GestionEvento.Dominio.Entidades.Evento>

<h2>Lista de Eventos</h2>

<p>
    <a asp-action="Crear">Crear Nuevo Evento</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Fecha</th>
            <th>Descripción</th>
            <th>Número de Asistentes</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var evento in Model)
        {
            <tr>
                <td>@evento.Nom_Evento</td>
                <td>@evento.Fecha_Evento.ToShortDateString()</td>
                <td>@evento.Desc_Evento</td>
                <td>@evento.Num_Asistentes_Evento</td>
                <td>
                    <a asp-action="Detalles" asp-route-id="@evento.EventoId">Detalles</a> |
                    <a asp-action="Editar" asp-route-id="@evento.EventoId">Editar</a> |
                    <form asp-action="Eliminar" asp-route-id="@evento.EventoId" method="post" onsubmit="return confirm('¿Estás seguro de que quieres eliminar este evento?');">
                        <button type="submit">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@model GestionEvento.Dominio.Entidades.Evento

<h2>Editar Evento</h2>

<form asp-action="Editar">
    <input type="hidden" asp-for="EventoId" />
    <div class="form-group">
        <label asp-for="Nom_Evento" class="control-label"></label>
        <input asp-for="Nom_Evento" class="form-control" />
        <span asp-validation-for="Nom_Evento" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Fecha_Evento" class="control-label"></label>
        <input asp-for="Fecha_Evento" type="date" class="form-control" />
        <span asp-validation-for="Fecha_Evento" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Desc_Evento" class="control-label"></label>
        <textarea asp-for="Desc_Evento" class="form-control"></textarea>
        <span asp-validation-for="Desc_Evento" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Num_Asistentes_Evento" class="control-label"></label>
        <input asp-for="Num_Asistentes_Evento" type="number" class="form-control" />
        <span asp-validation-for="Num_Asistentes_Evento" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
    </div>
</form>
